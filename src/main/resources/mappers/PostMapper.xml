<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
        
        
<mapper namespace="com.SH.outstagram.post.dao.PostDAO">


	<select id="selectFollowing" parameterType="int" resultType="com.SH.outstagram.post.model.Follow">
		SELECT 
			`id`
			, `thisId`
			, `thisName`
			, `userId`
			, `userName`
			, `createdAt`
		FROM
			`follow`
		WHERE 
			#{thisId} = `thisId`
	</select>
	
	<select id="selectFeedPostList" parameterType="int" resultType="com.SH.outstagram.post.model.Post">
		SELECT
			`id`
			, `userId`
			, `userName`
			, `imagePath`
			, `content`
			, `createdAt`
			, `updatedAt`
		FROM
			`post`
		WHERE
			#{thisId} = `userId`
	</select>

	<insert id="insertPost" parameterType="map">
		INSERT INTO `post`
		(
			`userId`
			, `userName`
			, `content`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		)
		VALUES
		(
			#{userId}
			, #{userName}
			, #{content}
			, #{imagePath}
			, now()
			, now()
		)
	</insert>


	<select id="selectIsFollow" parameterType="map" resultType="int">
		SELECT
			count(*)
		FROM
			`follow`
		WHERE
			`thisId`=#{thisId} AND `userId`=#{userId}
	</select>



</mapper>